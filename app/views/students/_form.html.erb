<!-- Validation errors display, if any -->
<%= render 'shared/errors', subject: @student %>

<!-- Materialize formatting -->
<div class="container">
<div class="row center sign-up-form">
<div class="col s12 m12 l12">
<div class="card-panel">
<div class="row">

<!-- Title -->
<h3 class="header">
  <%= @student.new_record? ? "Sign up!" : "Edit your profile" %>
</h3>

<!-- Student input/update data form -->
<%= form_for( @student, html: { class: "col s12"}, data: { turbo: false } ) do |f| %>

  <div class="row">
    <div class="input-field col s12">
      <%= f.text_field :name, placeholder: "Enter your full name", autofocus: true %>
      <%= f.label :name, class: "active" %>
    </div>
  </div>    
  <div class="row">
    <div class="input-field col s12">
      <%= f.email_field :email, placeholder: "Enter your e-mail address" %>
      <%= f.label :email, class: "active" %>
    </div>
  </div>          
  <div class="row">
    <div class="input-field col s12">
      <%= f.password_field :password, placeholder: "Choose a password" %>
      <%= f.label :password, class: "active" %>
    </div>
  </div>          
  <div class="row">
    <div class="input-field col s12">
      <%= f.password_field :password_confirmation, placeholder: "Confirm your password" %>
      <%= f.label :password_confirmation, class: "active" %>
    </div>
  </div>       

  <% if @student.new_record? %>
    <% label = "<i class='material-icons right'>arrow_forward</i>Sign up" %>
  <% else %>
    <% label = "<i class='material-icons right'>arrow_forward</i>Submit changes" %>
  <% end %>

  <div class="row">
    <div class="input-field col s12">
      <%= f.button( label.html_safe, class: "btn waves-effect waves-light" ) %>
    </div>
  </div>     

<% end %>

</div>
</div>
</div>
</div>
</div>
<!-- End form -->