<!-- Display validation error messages -->
<!-- ("subject" variable receives a varying data entity from the calling view) -->

<% if subject.errors.any? %>
  <div class="container">
  <div class="row sign-up-form">
  <div class="col s12 m12 l12">
  <div class="card-panel red lighten-2">
  <span class="white-text">
  
  <strong><%= pluralize(subject.errors.count, "error") %></strong>
  prohibited your profile from being created

  <ul>
    <% subject.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>

  </span></div></div></div></div>
<% end %>